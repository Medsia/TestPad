<div class="panel ml-auto mb-auto">

    <div class="panel-heading ml-auto mt-auto">
        <h4>Log in to the system</h4>
    </div>

    <div class="panel-body">
        <form class="form-text my-2 my-lg-0 ml-auto" action="@Url.Action("Index", "Admin")">

            <div class="form-group">
                <label class="text-info login-label">Login:</label>
                <input class="form-control col-4" type="text" maxlength="30" name="login" style="width: 200px" required/>
            </div>

            <div class="form-group">
                <label class="text-info login-label">Password:</label>
                <input class="form-control col-4" type="password" maxlength="30" name="password" style="width: 200px" required/>
            </div>

            <button class="btn btn-success" type="submit">Enter</button>
        </form>
    </div>

</div>
