@model LX.TestPad.Business.Models.TestModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Are you sure you want to delete this test?</h3>
<div>
<div class="row box-shadow mb-3">
    <br>
    <dl class="row col-sm-0 mx-auto">
        <dt class="col-sm-0">
            Name
        </dt>
        <dd class="col-sm-0">
            @Model.Name
        </dd>
        <dt class="col-sm-0">
            Description
        </dt>
        <dd class="col-sm-0">
            @Model.Description
        </dd>
        <dt class="col-sm-0">
            Duration
        </dt>
        <dd class="col-sm-6">
            @Model.TestDuration
        </dd>
    </dl>
    <br>
</div>

    <form asp-action="DeleteTest">
        <input type="hidden" asp-for="Id"/>
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-outline-danger ml-4 mr-auto" href="javascript:history.back()">Back</a>
    </form>
</div>
