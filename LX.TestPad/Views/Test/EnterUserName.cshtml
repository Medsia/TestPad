@model LX.TestPad.Business.Models.TestModel

@{
    ViewData["Title"] = Model.Name;
}

<div class="text-center">
    <h1 class="display-4">Please enter your Name</h1>
</div>

<form asp-action="CreatePreliminaryUserResultForTest" asp-route-TestId="@Model.Id" method="post">
    <div class="input-group-text flex-column" style="padding: 20px 20%;">
        <label>Name</label>
        <input type="text" class="form-control" style="text-align:center; width: 50%" name="UserName" maxlength="50" required />
        <span class="text-danger"></span>
        <label>Surname</label>
        <input type="text" class="form-control" style="text-align:center; width: 50%" name="UserSurname" maxlength="50" required />
        <span class="text-danger"></span>
        <input name="TestId" value="@Model.Id" hidden />
    </div>

    <div class="text-center my-3">
        <a class="btn btn-outline-danger mx-3 col-2" href="@Url.Action("Index", "Home")">Back to tests</a>
        <button type="submit" class="btn btn-success mx-3 col-2">Start Test</button>
    </div>
</form>
