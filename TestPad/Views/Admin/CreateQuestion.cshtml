@model LX.TestPad.Business.Models.QuestionModel
@{
    ViewData["Title"] = "New Question";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h4 class="text-center">@ViewData["Title"]</h4>
<hr/>

<form asp-action="CreateQuestion" asp-route-TestId="@Model.TestId" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row mb-3">
        <div class="col-md-5 col-md-auto mx-auto">
            <div class="form-group ml-auto">
                <label class="control-label">Text</label>
                <textarea spellcheck="true" maxlength="300" asp-for="Text" style="min-height: 40px; max-height: 200px;" rows="3" class="form-control" required></textarea>
                <span asp-validation-for="Text" class="text-danger"></span><br>
            </div>
            <div class="form-group ml-auto">
                <label class="control-label">Code snippet</label>
                <textarea spellcheck="false"  maxlength="2048" asp-for="CodeSnippet" style="min-height: 40px; max-height: 200px;" class="form-control"></textarea>
                <span asp-validation-for="CodeSnippet" class="text-danger"></span><br>
            </div>
            <div class="my-3 text-center">
                <a class="btn btn-outline-danger mx-1" style="width: 80px;" href="@Url.Action("TestQuestions", "Admin", new { testId = Model.TestId })">Back</a>
                <input type="submit" value="Create" class="btn btn-primary mx-1" style="width: 80px;"/>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}